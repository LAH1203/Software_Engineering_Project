                div 
                    a(class='form_item_name') 비밀번호 확인 
                div 
                    input(type='password' name='password2' placeholder='Confirm password' class='form_input')
                div(class='form_text_alter_padding')
                    div(id='alert_confirmpassword' class='form_text_alert')
            div 
                div 
                    a(class='form_item_name') 전화번호
                div 
                    input(type='number'  name='phone' placeholder='Enter phone number' class='form_input')
                div(class='form_text_alert_padding')
                    div(id='alter_phone' class='form_text_alter')
                    
            div
                input(type='radio' name='usertype' checked='checked')

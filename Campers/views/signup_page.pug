        form(name='sign_form' action='/signup' method='post')
             
            img(src='' class='' style='' onclick='')
            h2 회원가입
            hr
            div(style='height : 10px;')
            div 
                div 
                    a(class='form_item_name') 이름
                div 
                    input(type='text'  name='name' placeholder='Enter name' class='form_input')
                div(class='form_text_alert_padding')
                     div(id='alter_name' class='form_text_alter')
            div 
                div 
                    a(class='form_item_name') 이메일
                div 
                     input(type ='text'  name='email' placeholder='Enter E-mail' class='form_input')
                div(class = 'form_text_alter_padding')
                    div(id='alert_email' class='form_text_alter')
